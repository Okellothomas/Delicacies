<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Categories_details">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/colorPrimary">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:id="@+id/delicaciesImageView"
           android:src="@drawable/delicacies"
           android:scaleType="centerCrop"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:paddingTop="20dp"
           android:paddingBottom="20dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textSize="20sp"
               android:text="Category Name"
               android:id="@+id/delicaciesNameTextView"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:textColor="@color/colorPrimaryDark"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/delicaciesDescriptionTextView"
               android:text="Category description"
               android:layout_below="@+id/delicaciesNameTextView"
               android:textStyle="italic"
               android:textColor="@color/colorAccent"
               android:textSize="18sp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       </RelativeLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <Button
               android:text="Save Category"
               android:background="@color/colorAccent"
               android:textSize="16sp"
               android:textColor="@color/colorPrimaryDark"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <Button
               android:layout_marginLeft="40.9dp"
               android:text="Delete Category"
               android:background="@color/colorDivider"
               android:textSize="16sp"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       </LinearLayout>

   </LinearLayout>

</FrameLayout>